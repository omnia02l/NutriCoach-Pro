{% extends 'base-back.html.twig' %}

{% block title %}Convention index{% endblock %}

{% block contenu %}
    <h1>Convention index</h1>
    <div class="card">
            <div class="card-body">
              <h5 class="card-title"></h5>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Societe</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for convention in conventions %}
            <tr>
                <td>{{ convention.id }}</td>
                <td>{{ convention.societe }}</td>
                <td>{{ convention.adresse }}</td>
                <td>{{ convention.email }}</td>
                <td>{{ convention.telephone }}</td>
                <td>{{ convention.status }}</td>
                <td>
                    <a href="{{ path('app_convention_show', {'id': convention.id}) }}">show</a>
                    <a href="{{ path('app_convention_edit', {'id': convention.id}) }}">edit</a>
                    <form method="post" action="{{ path('app_convention_delete', {'id': convention.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline-block;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ convention.id) }}">
                    <button class="btn btn-danger">Supprimer</button>
                </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
       </div>
          </div>
{% endblock %}
